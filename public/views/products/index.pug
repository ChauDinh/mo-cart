extends ../layout/common.pug

block content
  h1.ml-5 Products

  form(action="/products/search", method="GET", class="d-flex ml-5 mr-5")
   input(type="text", name="q", class="form-control")
   button(class="btn btn-primary ml-2") Search

  ul
  each product in products
   li(class="ml-5 mr-5")
    span= product.name
    span &nbsp;
    a(href="/products/" + product.id) View