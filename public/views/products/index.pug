extends ../layout/common.pug

block content
  br
  h3.ml-5.text-black-50 Products: #{search}
  hr.ml-5.mr-5
  br
  .card-columns.ml-5.mr-5
   each product in products
    .card.shadow-sm.p-3.mb-5.bg-white.rounded
     img(src=product.image, alt=product.id, class="card-img-top rounded mx-auto d-block", style="max-width: 200px; margin-top: .8rem")
     .card-body
      h5.card-title(style="text-align: center")= product.name
      .row.no-gutters.ml-3.mr-3
       h6(style="font-size: 1.5rem; margin: auto auto" class="float-left text-primary") $9.99
       a(href="/products/" + product.id, class="btn btn-primary" role="button") View Product
     .card-footer
      small.text-muted Last updated 3 days ago