doctype html
html
 head
  link(rel="stylesheet", href="../../css/login.css")
  link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T', crossorigin='anonymous')
 body
  .container(style="width: 540px")
   h2(style="margin-left: 35px; color: #fff; font-weight: 300;") Welcome to MO.Cart Shopping

   if errors
    each error in errors
      .alert.alert-danger= error

   form(action="/auth/login", method="POST")
    .input-group
     input#email(name="email", type="text", value=values ? values.email : "")
     label(for="email") Email

    .input-group 
     input#password(name="password", type="password", value=values ? values.password : "")
     label(for="password") Password

    button(type="submit") Login
    p Forgot your account? 
      a(href="#") Contact us
    p Don't have account? 
      a(href="/users/create") Sign up

